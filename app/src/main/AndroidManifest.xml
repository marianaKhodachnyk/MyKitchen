<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mariana.kitchenassistant" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.example.mariana.kitchenassistant.MyApplication">
        <activity
            android:name="com.example.mariana.kitchenassistant.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.mariana.kitchenassistant.activity.RecipeInfoActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.example.mariana.kitchenassistant.activity.SearchActivity"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name="com.example.mariana.kitchenassistant.activity.FullScreenActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
